<% 
let OverDue = [];
let Today = [];
let Later = [];

const today = new Date().toISOString().slice(0, 10); 

for (let i = 0; i < allTodos.length; i++) {
    const dueDate = allTodos[i].dueDate; // Assuming dueDate is in "YYYY-MM-DD" format

    if (dueDate < today) {
        OverDue.push(allTodos[i]);
    } 
    else if (dueDate === today) {
        Today.push(allTodos[i]);
    } 
    else {
        Later.push(allTodos[i]);
    }
}
%>

<!-- Todo Categories -->
<div>
    <!-- Overdue Section -->
    <div class="mb-4" id= "overdue">
      <h5 class="text-lg font-semibold text-gray-800 flex items-center">
        Overdue
        <span 
          class="ml-2 bg-gray-200 text-gray-600 text-sm px-2 py-1 rounded-full"
          ><%= OverDue.length %></span
        >
      </h5>
      <div class="mt-2">
        <% OverDue.forEach(function(todo){ %>
            <label class="flex items-center Todo-item">
                <input type="checkbox" class="mr-2" />
